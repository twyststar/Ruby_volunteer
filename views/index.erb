<h1>Project Home:</h1>
<div class="col-xs-6">
  <% if @projects.any?() %>
<p>Click on a project to see it's description and the volunteers assigned:</p>
<ul>
  <% @projects.each do |project| %>
  <li><a href="/single_project/<%= project.id() %>"><%= project.name() %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are no projects yet!</p>
<% end %>
</div>
<div class="col-xs-6">
  <h3>Add a New Project:</h3>
  <form  action="/projects" method="post">
    <div class="form-group">
      <label class='form-label' for="name">Assign a name to your project:</label>
      <input type="text" name="name" id='name' placeholder="Project Name" autofocus>
      <label class='form-label' for="description">Add a brief description to your project:</label>
      <input type="text" name="description" id='description' placeholder="Project Description" autofocus>
      <button type="submit" class="button btn">Add Project</button>
    </div>
  </form>
</div>
