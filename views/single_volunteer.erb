<div class="col-xs-6">
  <h1><%= @volunteer.name() %></h1>
  <br>
  <h3>Primary Skill:</h3>
  <h2><%= @volunteer.skill() %></h2>
</div>
<div class="col-xs-6">
  <h3>Edit this volunteer:</h3>
  <form action="/single_volunteer/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit volunteer name:</label>
  <input id="name" name="name" type="text">
  <label for="skill">Change their Primary Skill:</label>
  <input id="skill" name="skill" type="text">
  <br>
  <button type="submit" class="btn btn-success">Update</button>
</form>
<br>

<form action="/single_volunteer/<%= @volunteer.id() %>" method="post">
  <label for="delete">Delete this volunteer:</label>
  <input name="_method" type="hidden" value="delete">
  <br>
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
</div>

</div>
