<div class="col-xs-6">
  <h3>Volunteer</h3>
  <div class="well">
    <h1><%= @volunteer.name() %></h1>
    <br>
    <h3>Primary Skill:</h3>
    <h2><%= @volunteer.skill() %></h2>
    <a href="/index"><button class='btn btn-info'type="button" name="button">Home</button></a>
  </div>
</div>
<div class="col-xs-6">
  <h3>Edit this volunteer:</h3>
  <form class="well" action="/single_volunteer/<%= @volunteer.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Edit volunteer name:</label>
    <br>
    <input id="name" name="name" type="text">
    <br>
    <button type="submit" class="btn btn-success">Edit</button>
  </form>

  <form class="well"  action="/single_volunteer_skill/<%= @volunteer.id() %>" method="post">
    <label for="skill">Change their Primary Skill:</label>
    <br>
    <input id="skill" name="skill" type="text">
    <br>
    <button type="submit" class="btn btn-success">Change</button>
  </form>
  <br>

  <form class="well" action="/single_volunteer/<%= @volunteer.id() %>" method="post">
    <label for="delete">Delete this volunteer:</label>
    <input name="_method" type="hidden" value="delete">
    <br>
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>

</div>
